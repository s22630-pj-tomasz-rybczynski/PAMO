<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.zjazd2.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.zjazd2.ui.dashboard.DashboardFragment"
        android:label="BMI"
        tools:layout="@layout/tbd" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.zjazd2.ui.notifications.NotificationsFragment"
        android:label="Calories intake"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_recipes"
        android:name="com.example.zjazd2.ui.recipes.RecipesFragment"
        android:label="Recipes"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_shopping_list"
        android:name="com.example.zjazd2.ui.shoppinglist.ShoppingListFragment"
        android:label="Shopping List"
        tools:layout="@layout/fragment_shopping_list" />
         />
</navigation>